<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_2ndbackground"
    tools:context=".InfoActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="Info on the state of: "
        android:textSize="24sp" />
    <TextView
        android:id="@+id/nameOfState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="stateName"
        android:textSize="24sp"
        android:layout_toRightOf="@id/textView2"
        android:layout_toEndOf="@id/textView2" />
    <TextView
        android:id="@+id/posCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="Positive Cases: "
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/textView2"/>

    <TextView
        android:id="@+id/negCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="Negative Cases: "
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/posCases"/>
    <TextView
        android:id="@+id/deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="Number of Deaths: "
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/negCases"/>
    <TextView
        android:id="@+id/hospCurr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="Hospitalized Currently: "
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/deaths"/>
    <TextView
        android:id="@+id/recovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="Recovered: "
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/hospCurr"/>

    <TextView
        android:id="@+id/numPosCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/posCases"
        android:layout_toRightOf="@+id/posCases"
        android:layout_alignTop="@id/posCases"
        android:fontFamily="@font/fenix"
        android:text="NUM POSCASES"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/numNegCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="NUM NEGCASES"
        android:textSize="24sp"
        android:layout_alignTop="@id/negCases"
        android:layout_toRightOf="@id/negCases"
        android:layout_toEndOf="@id/negCases"/>
    <TextView
        android:id="@+id/numDeaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="NUM DEATHS"
        android:textSize="24sp"
        android:layout_toRightOf="@id/deaths"
        android:layout_toEndOf="@id/deaths"
        android:layout_alignTop="@id/deaths"/>
    <TextView
        android:id="@+id/numHospCurr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="NUM HOSP"
        android:textSize="24sp"
        android:layout_alignTop="@id/hospCurr"
        android:layout_toRightOf="@id/hospCurr"
        android:layout_toEndOf="@id/hospCurr"/>
    <TextView
        android:id="@+id/numRecovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fenix"
        android:text="NUM RECOVERED"
        android:textSize="24sp"
        android:layout_alignTop="@id/recovered"
        android:layout_toRightOf="@id/recovered"
        android:layout_toEndOf="@id/recovered"/>



</RelativeLayout>